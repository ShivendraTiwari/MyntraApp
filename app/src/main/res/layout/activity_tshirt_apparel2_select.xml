<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAF0F1"
    tools:context=".TshirtApparel2Select">

    <RelativeLayout
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:elevation="10dp"
        android:translationZ="5dp">

        <androidx.appcompat.widget.Toolbar

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/lg"
                android:text="Denim"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="170dp"
                android:src="@drawable/ic_search" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:src="@drawable/ic_favorite" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:src="@drawable/ic_outline_shopping_basket_24" />

        </androidx.appcompat.widget.Toolbar>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relat1"
        android:layout_width="match_parent"
        android:layout_height="690dp"
        android:background="@android:color/white"
        android:layout_below="@+id/toolBar">

        <ImageView
            android:id="@+id/image1"
            android:layout_width="match_parent"
            android:layout_height="570dp"
            android:background="@drawable/chrishemsworth"
            android:scaleType="center" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:text="Here&amp;Now"
            android:textSize="17dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text1"
            android:layout_marginLeft="20dp"
            android:text="Printed Round Neck T-Shirt"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text2"
            android:layout_marginLeft="20dp"
            android:text="Rs620"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="30dp"
            android:layout_toRightOf="@+id/text3"
            android:text="Rs620"
            android:textColor="@android:color/black"
            android:textSize="10dp" />


        <TextView
            android:id="@+id/text5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="259dp"
            android:layout_marginBottom="30dp"
            android:layout_toRightOf="@+id/text4"
            android:text="(5% OFF)"
            android:textColor="@android:color/holo_red_light"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/text6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="5dp"
            android:text="Inclusive of all taxes "
            android:textColor="#26A69A"
            android:textSize="15dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relat2"
        android:layout_width="195dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/relat1"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"
        android:background="@drawable/tshirtapparel2button">

        <ImageView
            android:id="@+id/favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_favorite" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="17dp"
            android:layout_toRightOf="@+id/favorite"
            android:text="WISHLIST"
            android:textStyle="bold" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/addToBag"
        android:layout_width="210dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/relat1"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/relat2"
        android:layout_margin="5dp"
        android:background="@drawable/tshirtapparel2redbutton">

        <ImageView
            android:id="@+id/bag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="17dp"
            android:src="@drawable/ic_outline_local_mall_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="17dp"
            android:layout_toRightOf="@+id/bag"
            android:text="ADD TO BAG"
            android:textColor="@android:color/white"
            android:textStyle="bold" />


    </RelativeLayout>
</RelativeLayout>