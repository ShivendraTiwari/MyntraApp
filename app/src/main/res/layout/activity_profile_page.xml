<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilePage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:background="@drawable/worldmap">


    </RelativeLayout>

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="370dp"
        android:text="Already have an Account"
        android:textSize="20dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="400dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/fb"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="80dp"
            android:background="@drawable/buttonfacebook"
            android:gravity="center"
            android:orientation="horizontal"
            android:text="Facebook">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@drawable/facebook" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Facebook"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/google"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:background="@drawable/buttonfacebook"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-10dp"
                android:src="@drawable/google" />

            <TextView
                android:id="@+id/btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:text="GOOGLE"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

    <!--    <RelativeLayout-->
    <!--        android:id="@+id/linearline"-->
    <!--        android:layout_height="1dp"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_below="@+id/linearbig"-->
    <!--        android:background="@android:color/black"-->
    <!--        android:layout_marginTop="10dp">-->

    <LinearLayout
        android:id="@+id/linearbig"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_below="@+id/linear1"
        android:layout_centerInParent="true"
        android:layout_marginTop="-3dp"
        android:background="@drawable/buttonfacebook"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-10dp"
            android:src="@drawable/ic_outline_email_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="LOGIN WITH EMAIL"
            android:textStyle="bold" />


    </LinearLayout>

    <TextView
        android:id="@+id/or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearbig"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="OR"
        android:textSize="20dp" />
    <!--    </RelativeLayout>-->

    <TextView
        android:id="@+id/myntra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/or"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:text="New to Myntra"
        android:textSize="20dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linearbig2"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_below="@+id/myntra"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/buttonfacebook"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:src="@drawable/ic_outline_person_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="CREATE NEW ACCOUNT"
            android:textStyle="bold" />


    </LinearLayout>

</RelativeLayout>